# 服务器
PORT=3000
AUTH_TOKEN=your-secret-token

# 主 Provider（选一个）
PRIMARY_PROVIDER=anthropic

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL_ID=claude-sonnet-4-20250514

# OpenAI（兼容 DeepSeek、Qwen 等）
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_ID=gpt-4o

# Gemini
GEMINI_API_KEY=
GEMINI_BASE_URL=
GEMINI_MODEL_ID=gemini-2.0-flash

# PostgreSQL（SDK + 业务表 + 向量表共用）
PG_HOST=localhost
PG_PORT=5433
PG_DATABASE=kode
PG_USER=postgres
PG_PASSWORD=postgres
FILE_STORE_DIR=./data/files

# 向量检索集合名（可选，不配置则跳过向量检索）
# VECTOR_COLLECTION=assistant_memory

# 沙箱
SANDBOX_KIND=local
SANDBOX_WORK_DIR=./workspace

# E2B 云沙箱（可选，配置后自动启用）
E2B_API_KEY=
E2B_TEMPLATE=base
E2B_TIMEOUT_MS=300000

# 长任务进度推送
PROGRESS_ENABLED=true
PROGRESS_INTERVAL_MS=15000
